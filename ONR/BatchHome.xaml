<Page
    x:Class="ONR.BatchHome"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ONR"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="18*"/>
            <RowDefinition Height="107*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="56*"/>
                <RowDefinition Height="259*"/>
                <RowDefinition Height="113*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="13*"/>
                <ColumnDefinition Width="124*"/>
                <ColumnDefinition Width="13*"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="batches_title" Grid.Column="1" HorizontalAlignment="Left" Margin="0,28,0,0" Text="Batches" TextWrapping="Wrap" VerticalAlignment="Stretch" FontSize="28" FontFamily="Ebrima" Height="Auto" Width="Auto"/>
            <ScrollContentPresenter Grid.Column="1" Grid.Row="1"/>
            <ListView Name="BatchPanel" Grid.Column="1" Grid.Row="1" ItemsSource="{x:Bind Batches}">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="Padding" Value="0" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.Resources>
                    <SolidColorBrush x:Key="ListViewItemBackground" Color="#F0F0F0" />
                    <SolidColorBrush x:Key="ListViewItemBackgroundSelectedPointerOver" Color="#A4B5BA" />
                    <SolidColorBrush x:Key="ListViewItemBackgroundPressed" Color="#C1D4D9" />
                    <SolidColorBrush x:Key="ListViewItemBackgroundSelected" Color="#C1D4D9" />
                    <SolidColorBrush x:Key="ListViewItemBackgroundSelectedPressed" Color="#C1D4D9" />
                    <SolidColorBrush x:Key="ListViewItemBackgroundPointerOver" Color="#D3D3D3" />
                </ListView.Resources>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:Batch">
                        <Border BorderBrush="Black" Margin="-12,5,0,1" BorderThickness="0,0,0,1" >
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Column="0" Text="{x:Bind batch_name}" Margin="12,6,0,0" 
                    Style="{ThemeResource BaseTextBlockStyle}"/>
                                <TextBlock  Grid.Column="0" Grid.Row="1" Text="{x:Bind date_added}" Margin="12,0,0,6" 
                    Style="{ThemeResource BodyTextBlockStyle}"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>
        </Grid>
    </Grid>

