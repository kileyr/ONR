<Page
    x:Class="ONR.WJDataPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ONR"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="511*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="29*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="99*"/>
                <ColumnDefinition Width="773*"/>
                <ColumnDefinition Width="99*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="1"
               Name ="WJDataTitle"
               Grid.Row="0"
               FontSize="30"
               Text="WHAT"
               TextAlignment="Center"
               VerticalAlignment="Center"
               HorizontalAlignment="Left"/>
            <Grid Grid.Column="1" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="24"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="24"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="24"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Grid.Row="0" Content="Barnacle" MinWidth="112" HorizontalAlignment="Left" VerticalAlignment="Top" Click="to_barnacle">
                    <Button.Resources>
                        <SolidColorBrush x:Key="ButtonBackground" Color="#C1D4D9"/>
                        <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#abc1c7" />
                        <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#496B73" />
                    </Button.Resources>
                </Button>
                <Button Grid.Column="1" Grid.Row="0" Content="Molluscs" MinWidth="112" HorizontalAlignment="Left" VerticalAlignment="Top" Click="to_molluscs">
                    <Button.Resources>
                        <SolidColorBrush x:Key="ButtonBackground" Color="#C1D4D9"/>
                        <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#abc1c7" />
                        <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#496B73" />
                    </Button.Resources>
                </Button>
                <Button Grid.Column="2" Grid.Row="0" Content="Tubeworms" MinWidth="112" HorizontalAlignment="Left" VerticalAlignment="Top" Click="to_tubeworms">
                    <Button.Resources>
                        <SolidColorBrush x:Key="ButtonBackground" Color="#C1D4D9"/>
                        <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#abc1c7" />
                        <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#496B73" />
                    </Button.Resources>
                </Button>
                <Button Grid.Column="3" Grid.Row="0" Content="Bryozoans" MinWidth="112" HorizontalAlignment="Left" VerticalAlignment="Top" Click="to_bryozoans">
                    <Button.Resources>
                        <SolidColorBrush x:Key="ButtonBackground" Color="#C1D4D9"/>
                        <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#abc1c7" />
                        <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#496B73" />
                    </Button.Resources>
                </Button>
                <Button Grid.Column="0" Grid.Row="2" Content="Hydroids" MinWidth="112" HorizontalAlignment="Left" VerticalAlignment="Top" Click="to_hydroids">
                    <Button.Resources>
                        <SolidColorBrush x:Key="ButtonBackground" Color="#C1D4D9"/>
                        <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#abc1c7" />
                        <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#496B73" />
                    </Button.Resources>
                </Button>
                <Button Grid.Column="1" Grid.Row="2" Content="Anenomes" MinWidth="112" HorizontalAlignment="Left" VerticalAlignment="Top" Click="to_anenomes">
                    <Button.Resources>
                        <SolidColorBrush x:Key="ButtonBackground" Color="#C1D4D9"/>
                        <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#abc1c7" />
                        <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#496B73" />
                    </Button.Resources>
                </Button>
                <Button Grid.Column="2" Grid.Row="2" Content="Tunicates" MinWidth="112" HorizontalAlignment="Left" VerticalAlignment="Top" Click="to_tunicates">
                    <Button.Resources>
                        <SolidColorBrush x:Key="ButtonBackground" Color="#C1D4D9"/>
                        <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#abc1c7" />
                        <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#496B73" />
                    </Button.Resources>
                </Button>
                <Button Grid.Column="3" Grid.Row="2" Content="Amphipods" MinWidth="112" HorizontalAlignment="Left" VerticalAlignment="Top" Click="to_amphipods">
                    <Button.Resources>
                        <SolidColorBrush x:Key="ButtonBackground" Color="#C1D4D9"/>
                        <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#abc1c7" />
                        <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#496B73" />
                    </Button.Resources>
                </Button>
                <Button Grid.Column="0" Grid.Row="4" Content="Sponges" MinWidth="112" HorizontalAlignment="Left" VerticalAlignment="Top" Click="to_sponges">
                    <Button.Resources>
                        <SolidColorBrush x:Key="ButtonBackground" Color="#C1D4D9"/>
                        <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#abc1c7" />
                        <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#496B73" />
                    </Button.Resources>
                </Button>
                <Button Grid.Column="1" Grid.Row="4" Content="Aglae" MinWidth="112" HorizontalAlignment="Left" VerticalAlignment="Top" Click="to_aglae">
                    <Button.Resources>
                        <SolidColorBrush x:Key="ButtonBackground" Color="#C1D4D9"/>
                        <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#abc1c7" />
                        <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#496B73" />
                    </Button.Resources>
                </Button>
                <Button Grid.Column="2" Grid.Row="4" Content="Unknown Soft" MinWidth="112" HorizontalAlignment="Left" VerticalAlignment="Top" Click="to_unknownsoft">
                    <Button.Resources>
                        <SolidColorBrush x:Key="ButtonBackground" Color="#C1D4D9"/>
                        <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#abc1c7" />
                        <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#496B73" />
                    </Button.Resources>
                </Button>
                <Button Grid.Column="3" Grid.Row="4" Content="Incipient" MinWidth="112" HorizontalAlignment="Left" VerticalAlignment="Top" Click="to_incipient">
                    <Button.Resources>
                        <SolidColorBrush x:Key="ButtonBackground" Color="#C1D4D9"/>
                        <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#abc1c7" />
                        <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#496B73" />
                    </Button.Resources>
                </Button>
                <Button Grid.Column="0" Grid.Row="6" Content="Biofilm" MinWidth="112" HorizontalAlignment="Left" VerticalAlignment="Top" Click="to_biofilm">
                    <Button.Resources>
                        <SolidColorBrush x:Key="ButtonBackground" Color="#C1D4D9"/>
                        <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#abc1c7" />
                        <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#496B73" />
                    </Button.Resources>
                </Button>

            </Grid>
            <Grid Grid.Row="4" Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="11*"/>
                    <RowDefinition Height="26*"/>
                    <RowDefinition Height="30*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="142*"/>
                        <ColumnDefinition Width="673*"/>
                    </Grid.ColumnDefinitions>
                    <ToggleSwitch Grid.Column="0" Name="TotalMacroToggle" Header="Show Total Macro"
                                  OffContent="Hidden" OnContent="Showing" Toggled="toggle_total_macro">
                        <ToggleSwitch.Resources>
                            <SolidColorBrush x:Key="ToggleSwitchFillOn" Color="#496B73"/>
                            <SolidColorBrush x:Key="ToggleSwitchFillOnPointerOver" Color="#496B73"/>
                            <SolidColorBrush x:Key="ToggleSwitchFillOnPressed" Color="#496B73"/>
                        </ToggleSwitch.Resources>
                    </ToggleSwitch>

                    <TextBlock Name="total_macro" Grid.Column="1" FontSize="20" Text="0.00" VerticalAlignment="Center" Visibility="Collapsed"/>
                </Grid>
            </Grid>
        </Grid>
        <CommandBar Background="#011826" Foreground="White" Height="76" Grid.RowSpan="2" DefaultLabelPosition="Right">
            <CommandBar.Resources>
                <SolidColorBrush x:Key="AppBarButtonForegroundPointerOver" Color="#C1D4D9"/>
                <SolidColorBrush x:Key="AppBarButtonBackgroundPointerOver" Color="#707070" />
                <SolidColorBrush x:Key="AppBarButtonForegroundPressed" Color="#C1D4D9"/>
                <SolidColorBrush x:Key="AppBarButtonBackgroundPressed" Color="#707070" />
                <SolidColorBrush x:Key="AppBarEllipsisButtonForegroundPointerOver" Color="#C1D4D9" />
                <SolidColorBrush x:Key="AppBarEllipsisButtonForegroundPressed" Color="#C1D4D9" />
            </CommandBar.Resources>
            <AppBarButton Icon="Accept" IsCompact="false" Foreground="White" Label="Save" Click="save_and_exit"/>
            <AppBarButton Icon="Cancel" IsCompact="false" Foreground="White" Label="Exit" Click="exit"/>
            <CommandBar.SecondaryCommands>
                <AppBarButton Label="Batches" Click="nav_to_BatchHome"/>
            </CommandBar.SecondaryCommands>
            <CommandBar.Content>
                <TextBlock Grid.Column="0"
               Grid.Row="0"
               Text="  ONR"
               Foreground="White"
               FontSize="28"
               TextAlignment="Center"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"/>
            </CommandBar.Content>
        </CommandBar>
    </Grid>
    
</Page>
